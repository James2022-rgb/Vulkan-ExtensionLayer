{
    "file_format_version": "1.2.0",
    "layer": {
        "name": "VK_LAYER_KHRONOS_dynamic_rendering",
        "type": "GLOBAL",
        "library_path": "@JSON_LIBRARY_PATH@",
        "api_version": "@JSON_VERSION@",
        "implementation_version": "1",
        "description": "Khronos dynamic rendering layer",
        "introduction": "The VK_LAYER_KHRONOS_dynamic_rendering extension layer implements the VK_KHR_dynamic_rendering extension.",
        "platforms": [ "WINDOWS", "LINUX", "ANDROID" ],
        "instance_extensions": [
            {
                "name": "VK_EXT_layer_settings",
                "spec_version": "2"
            }
        ],
        "device_extensions": [
            {
                "name": "VK_KHR_dynamic_rendering",
                "spec_version": "1",
                "entrypoints": [
                    "vkCmdBeginRenderingKHR",
                    "vkCmdEndRenderingKHR"
                ]
            }
        ],
        "features": {
            "settings": [
                {
                    "key": "force_enable",
                    "env": "VK_DYNAMIC_RENDERING_FORCE_ENABLE",
                    "label": "Force Enable",
                    "description": "Force the layer to be active even if the underlying driver also implements the dynamic rendering extension.",
                    "type": "BOOL",
                    "default": false
                }
            ]
        }
    }
}